<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:background="@drawable/pop">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="742dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Popular" >

    <Button
        android:id="@+id/burger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
       android:onClick="onClickBurger"
        android:text="Garlic Rosemary Chicken Burger" />

    <Button
        android:id="@+id/buttonDoner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/burger"
        android:layout_below="@+id/burger"
        android:layout_marginTop="31dp"
        android:onClick="doner"
        android:text="Doner Kebaab" />

    <Button
        android:id="@+id/buttonDosa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonDoner"
        android:layout_below="@+id/buttonDoner"
        android:layout_marginTop="25dp"
        android:onClick="dosa"
        android:text="Egg Dosa" />

    <Button
        android:id="@+id/buttonShwarma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonTikiya"
        android:layout_below="@+id/buttonTikiya"
        android:layout_marginTop="18dp"
        android:onClick="shwarma"
        android:text="Arabian Shwarma" />

    <Button
        android:id="@+id/buttonTikiya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonDosa"
        android:layout_below="@+id/buttonDosa"
        android:layout_marginTop="16dp"
        android:onClick="tikiya"
        android:text="Tikiya Kebaab" />

    <Button
        android:id="@+id/buttonSpha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonShwarma"
        android:layout_below="@+id/buttonShwarma"
        android:layout_marginTop="21dp"
        android:onClick="tuna"
        android:text="Tuna Sphagetti" />

</RelativeLayout>
</ScrollView>